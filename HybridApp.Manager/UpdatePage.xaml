<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HybridApp.Manager.UpdatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HybridApp.Manager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent">
        <TextBlock Text="An update is available for HybridApp." TextWrapping="Wrap"/>
        <TextBlock Text="Would you like to update now?" TextWrapping="Wrap"/>
    </StackPanel>

</Page>
